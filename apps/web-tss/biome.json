{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**/*",
      ".vscode/**/*",
      "index.html",
      "vite.config.ts",
      "vitest.config.ts",
      "vitest.setup.ts",
      "!src/routeTree.gen.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/.next/**",
      "!**/drizzle/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "off",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useImportType": "warn",
        "useNodejsImportProtocol": "error",
        "useConsistentArrayType": "error",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noConsole": "warn"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "off"
      },
      "performance": {
        "noDelete": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  }
}
