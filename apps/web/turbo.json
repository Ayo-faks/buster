{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
      "build": {
        "dependsOn": ["^build", "@buster/server-shared#build"],
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "public/**/*",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ],
        "outputs": [".output/**", ".vercel/**"]
      },
      "build:vercel": {
        "dependsOn": ["^build:vercel", "@buster/server-shared#build"],
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "public/**/*",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ],
        "outputs": [".output/**", ".vercel/**"]
      },
      "start": {
        "dependsOn": ["build"],
        "cache": true,
        "persistent": true
      },
      "test": {
        "inputs": [
          "src/**/*",
          "**/*.test.{ts,tsx,js,jsx}",
          "**/*.spec.{ts,tsx,js,jsx}",
          "playwright-tests/**/*",
          "vitest.config.ts",
          "package.json"
        ]
      },
      "dev": {
        "dependsOn": ["@buster/server-shared#build"],
        "cache": false,
        "persistent": true,
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ]
      },
      "dev:fast": {
        "dependsOn": ["@buster/server-shared#build"],
        "cache": false,
        "persistent": true,
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ]
      }
    }
  }
  