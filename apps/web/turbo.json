{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
      "build": {
        "dependsOn": ["^build", "@buster/server-shared#build"],
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "public/**/*",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ],
        "outputs": [
          ".output/server/index.mjs",
          ".output/server/chunks/**",
          ".output/public/assets/**/*.js",
          ".output/public/assets/**/*.css",
          ".output/public/favicon.ico",
          ".output/public/manifest.json",
          ".vercel/**",
          "!.output/**/*.map",
          "!.output/**/*.map.js",
          "!.output/server/node_modules/**",
          "!.output/public/assets/**/*.png",
          "!.output/public/assets/**/*.jpg",
          "!.output/public/assets/**/*.jpeg",
          "!.output/public/assets/**/*.gif",
          "!.output/public/assets/**/*.svg",
          "!.output/**/*.test.*",
          "!.output/**/*.spec.*"
        ]
      },
      "build:vercel": {
        "dependsOn": ["^build:vercel", "@buster/server-shared#build"],
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "public/**/*",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ],
        "outputs": [
          ".output/server/index.mjs",
          ".output/server/chunks/**",
          ".output/public/assets/**/*.js",
          ".output/public/assets/**/*.css",
          ".output/public/favicon.ico",
          ".output/public/manifest.json",
          ".vercel/**",
          "!.output/**/*.map",
          "!.output/**/*.map.js",
          "!.output/server/node_modules/**",
          "!.output/public/assets/**/*.png",
          "!.output/public/assets/**/*.jpg",
          "!.output/public/assets/**/*.jpeg",
          "!.output/public/assets/**/*.gif",
          "!.output/public/assets/**/*.svg",
          "!.output/**/*.test.*",
          "!.output/**/*.spec.*"
        ]
      },
      "start": {
        "dependsOn": ["build"],
        "cache": true,
        "persistent": true
      },
      "test": {
        "inputs": [
          "src/**/*",
          "**/*.test.{ts,tsx,js,jsx}",
          "**/*.spec.{ts,tsx,js,jsx}",
          "playwright-tests/**/*",
          "vitest.config.ts",
          "package.json"
        ]
      },
      "dev": {
        "dependsOn": ["@buster/server-shared#build"],
        "cache": false,
        "persistent": true,
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ]
      },
      "dev:fast": {
        "dependsOn": ["@buster/server-shared#build"],
        "cache": false,
        "persistent": true,
        "inputs": [
          "src/**/*",
          "!src/**/*.test.{ts,tsx,js,jsx}",
          "!src/**/*.spec.{ts,tsx,js,jsx}",
          "next.config.mjs",
          "tailwind.config.ts",
          "tsconfig.json",
          "package.json"
        ]
      }
    }
  }
  